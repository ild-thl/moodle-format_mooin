<div class="badges-certificates-card container-md">
    <br>
    <h2>{{#str}} badges_certificates, format_mooin4 {{/str}}</h2>
    <div class="badges-cert-container pt-2 d-flex justify-content-between">

        <div class="badges-card">
            <div class="d-flex align-items-center">
                <span class="icon-wrapper badges-icon"></span>
                <p class="caption fw-700 text-primary pl-2">
                    <a href="{{badges_url}}">{{#str}} badges, format_mooin4 {{/str}}</a>
                </p>
                {{{manage_badges_link}}}
            </div>
            <div class="badges-card-inner d-flex align-items-center">
                {{#badges}}
                {{{badges}}}
                {{#other_badges}}
                <span class="text-nowrap pr-1">+{{other_badges}}</span>
                {{/other_badges}}
                {{/badges}}
                {{^badges}}
                <div class="d-flex w-100 align-items-center">
                    <div class="no-badges-img"></div>
                    <span class="no-badge-text">{{#str}}no_badges_image_text, format_mooin4{{/str}}</span>
                </div>
                {{/badges}}
            </div>
            <div class="primary-link d-block text-right">
                <a href="{{badges_url}}">{{#str}} show_all_infos, format_mooin4 {{/str}}</a>
            </div>
        </div>

        <div class="certificate-card">
            <div class="d-flex align-items-center">
                <span class="icon-wrapper award-icon"></span>
                <a href="{{certificate_url}}" class="caption fw-700 text-primary pl-2">{{#str}} certificates,
                    format_mooin4
                    {{/str}}</a>
                {{#has_capability}}
                <button type="button" class="btn info-tip" data-toggle="tooltip" data-placement="top"
                    title=" {{#str}} certificates_tooltip, format_mooin4 {{/str}}">
                    <span class="bi bi-info-circle-fill"></span>
                </button>
                {{/has_capability}}
            </div>
            <div class="certificate-card-inner d-flex align-items-center">
                {{#certificates}}
                {{{certificates}}}
                {{#other_certificates}}
                <span class="text-nowrap pr-1">+{{other_certificates}}</span>
                {{/other_certificates}}
                {{/certificates}}
                {{^certificates}}
                <div class="d-flex w-100 align-items-center">
                    <div class="no-certificates-img"></div>
                    <span class="no-certificates-text">{{#str}} no_certificates_image_text, format_mooin4
                        {{/str}}</span>
                </div>

                {{/certificates}}
            </div>
            <div class="primary-link d-block text-right">
                <a href="{{certificate_url}}">{{#str}} show_all_infos, format_mooin4 {{/str}}</a>
            </div>
        </div>
    </div>
</div>

<div class="seperator"></div>


<div class="community container-md">
    <br>
    <div class="d-flex">
        <h2>{{#str}} community, format_mooin4 {{/str}}</h2>
        {{#has_capability}}
        <button type="button" class="btn info-tip" data-toggle="tooltip" data-placement="top"
            title="{{#str}} discussions_tooltip, format_mooin4 {{/str}}">
            <span class="bi bi-info-circle-fill"></span>
        </button>
        {{/has_capability}}
    </div>

    <div class=" d-flex">

        {{#discussion}}
        <div class="discussion">
            <div class="d-none d-sm-inline-block align-items-center mb-3">
                {{#new_news}}
                {{{new_news}}}
                {{/new_news}}

                {{^new_news}}
                <span> {{neue_forum_number}} </span>
                {{#str}} unread_discussions, format_mooin4 {{/str}}
                <a href="{{disc_url}}" class="primary-link">{{#str}} discussion_forum, format_mooin4 {{/str}}</a>
                {{/new_news}}

            </div>
            <div class="community-container d-flex justify-content-between">


                {{#news_text}}
                <div class="news-card d-flex">
                    <span class="chat-icon"></span>
                    <div class="news-card-inner pt-1">
                        <span class="caption-sm d-none d-sm-block">
                            <a href="{{discussion_url}}" class="fw-700 text-primary">{{#str}} latest_post,
                                format_mooin4{{/str}}</a>
                            {{#str}} by, format_mooin4 {{/str}} {{{user_firstname}}} - {{{created_news}}}
                        </span>
                        <span class="caption d-flex d-md-none justify-content-between">
                            <span class="fw-700">{{#str}} latest_contribution_mobile, format_mooin4{{/str}}</span>
                            <!-- <a href="{{news_url}}" class="primary-link text-primary">{{#str}} all_news_mobile,
                                format_mooin4 {{/str}}</a> -->
                        </span>
                        <div class="position-relative pt-0 pt-md-1">
                            <span class="new_user_picture d-none d-sm-block">{{{user_picture}}}</span>
                            <p class="fw-500 text-truncate">{{{news_title}}}</p>
                            <div class="d-none d-sm-block message">
                                {{{news_text}}}
                            </div>
                        </div>
                        <div class="primary-link d-none d-sm-block text-right">
                            <a href="{{discussion_url}}">{{#str}} discussion_news, format_mooin4 {{/str}}</a>
                        </div>
                    </div>
                </div>
                {{/news_text}}


                {{/discussion}}
                <div class="participant-card d-flex">
                    <div class="d-flex">
                        <span class="icon-wrapper participant-icon"></span>
                        <div>
                            <a href="{{participants_url}}" class="caption fw-700 text-primary">{{#str}} user_card_title,
                                format_mooin4
                                {{/str}}</a>
                            <br>
                            <span class="fw-700">{{user_count}} {{#str}} user, format_mooin4 {{/str}}</span>
                            <span>{{#str}}in_course,
                                format_mooin4{{/str}}</span>
                            <p class="caption-sm fw-700">{{#str}} new_user, format_mooin4 {{/str}}</p>
                            <ul class="caption-sm">{{{user_list}}}</ul>
                        </div>
                    </div>
                    <div class="primary-link d-none d-sm-block text-right">
                        <a href="{{participants_url}}">{{#str}} show_all_infos, format_mooin4 {{/str}}</a>
                    </div>
                </div>
            </div>
        </div>

        {{#userlist}}



        {{/userlist}}

    </div>
</div>
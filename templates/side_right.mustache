<div class="badges-certificates-card">
  <div class="container pt-2">
    <h2>{{#str}} badges_certificates, format_mooin {{/str}}</h2>
    <div class="badges-card">
      <div class="d-flex align-items-center">
        <span class="icon-wrapper badges-icon"></span>
        <p class="caption fw-700 text-primary pl-2">
          <a href="{{badges_url}}">{{#str}} badges, format_mooin {{/str}}</a>
        </p>
        {{{manage_badges_link}}}
      </div>
      <div class="badges-card-inner d-flex align-items-center">
        {{#badges}}
        {{{badges}}}
        <span class="text-nowrap pr-1">+ 4</span>
        {{/badges}}
        {{^badges}}
        <div class="d-flex w-100 align-items-center">
          <div class="no-badges-img"></div>
          <span class="no-badge-text">Keine Zertifikate verfügbar</span>
        </div>
        {{/badges}}
      </div>
      <div class="primary-link d-block text-right">
        <a href="{{badges_url}}">{{#str}} see_badges, format_mooin {{/str}}</a>
      </div>
    </div>

    <div class="certificate-card">


      <div class="d-flex align-items-center">
        <span class="icon-wrapper award-icon"></span>
        <a href="{{certificate_url}}" class="caption fw-700 text-primary pl-2">{{#str}} certificates, format_mooin
          {{/str}}</a>
        {{#has_capability}}
        <button type="button" class="btn info-tip" data-toggle="tooltip" data-placement="top"
          title="Zertifikate werden in den Lektionen angelegt.">
          <span class="bi bi-info-circle-fill"></span>
        </button>
        {{/has_capability}}
      </div>
      <div class="certificate-card-inner">
        {{{certificates}}}
        {{^certificates}}
        <div class="d-flex w-100 align-items-center">
          <div class="no-certificates-img"></div>
          <span class="no-certificate-text">Keine Zertifikate verfügbar</span>
        </div>

        {{/certificates}}
      </div>
      <div class="primary-link d-block text-right">
        <a href="{{certificate_url}}">{{#str}} see_badges, format_mooin {{/str}}</a>
      </div>
    </div>
  </div>
</div>

<div class="community">
  <div class="container">
    <h2>{{#str}} community, format_mooin {{/str}}</h2>
    {{#has_capability}}
    <button type="button" class="btn info-tip" data-toggle="tooltip" data-placement="top"
      title="Diskussionsforen werden in den Lektionen angelegt.">
      <span class="bi bi-info-circle-fill"></span>
    </button>
    {{/has_capability}}
    <div class="forum-card">
      <div class="d-flex align-items-center">
        {{> format_mooin/discussions_tile}}
      </div>

      {{#userlist}}
      <div class="participant-card">
        <div class="participant-card-inner">
          <div class="d-flex">
            <span class="icon-wrapper participant-icon"></span>
            <div>
              <a href="{{participants_url}}" class="caption fw-700 text-primary">{{#str}} user_card_title, format_mooin
                {{/str}}</a>
              <br>
              <span class="fw-700">{{user_count}} {{#str}} user_in_course, format_mooin {{/str}}</span>
              <p class="caption-sm fw-700">{{#str}} new_user, format_mooin {{/str}}</p>
              <ul class="caption-sm">{{{user_list}}}</ul>
            </div>
          </div>
          <div class="primary-link d-none d-md-block text-right">
            <a href="{{participants_url}}">{{#str}} show_all_infos, format_mooin {{/str}}</a>
          </div>
        </div>
      </div>
      {{/userlist}}
    </div>
  </div>
</div>
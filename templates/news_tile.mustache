{{#news}}
<div class="news pb-4">
  <div class="container-md">

    {{{edit_newsforum_link}}}
    <br>
    <h2 class="mb-1">{{#str}} news, format_mooin {{/str}}</h2>
    <div class="d-none d-md-inline-block align-items-center mb-3">
      {{#new_news}}
      <span class="count-container inline-badge fw-700 mr-1">{{neue_news_number}}</span>
      {{/new_news}}

      {{^new_news}}
      <span>{{neue_news_number}}</span>
      {{/new_news}}
      {{#str}} unread_news, format_mooin {{/str}}

      <a href="{{news_url}}" class="primary-link">{{#str}} all_news, format_mooin {{/str}}</a>

    </div>
    <div class="news-card d-flex">
      <span class="news-icon"></span>
      <div class="news-card-inner pt-1">
        <span class="caption-sm d-none d-md-block">
          <a href="{{discussion_url}}" class="fw-700 text-primary">{{#str}} letze_beitrag, format_mooin{{/str}}</a>
          von {{{user_firstname}}} - {{{created_news}}}
        </span>
        <span class="caption d-flex d-md-none justify-content-between">
          <a href="{{discussion_url}}" class="fw-700">{{#str}} latest_contribution_mobile, format_mooin{{/str}}</a>
          <a href="{{news_url}}" class="primary-link text-primary">{{#str}} all_news_mobile, format_mooin {{/str}}</a>
        </span>
        <div class="position-relative pt-0 pt-md-1">
          <span class="new_user_picture d-none d-md-block">{{{user_picture}}}</span>
          <p class="fw-500 text-truncate">{{{news_title}}}</p>
          <div class="d-none d-md-block">
            <div class="message">
              {{{news_text}}}
            </div>

          </div>
        </div>
        <div class="primary-link d-none d-md-block text-right">
          <a href="{{discussion_url}}">{{#str}} discussion_news, format_mooin {{/str}}</a>
        </div>
      </div>
    </div>
  </div>
</div>
{{/news}}
{{^news}}
<div class="text-center text-md-right p-2 mr-md-5">
  <span>Newsforum Einstellungen -</span>
  {{{edit_newsforum_link}}}
</div>
{{/news}}